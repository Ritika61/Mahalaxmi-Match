<!doctype html>
<html lang="en">
<head>
  <%- include('../partials/head', { title: (title || 'Admin • Activity') }) %>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
  <style>
    body{margin:0;background:#0e172a;color:#e6edf7;font-family:system-ui,Segoe UI,Roboto,Arial}
    .container{max-width:1100px;margin:0 auto;padding:28px 22px 40px}
    h1{margin:0 0 10px;font-size:34px;font-weight:900}
    .muted{color:#a5b4c7}
    .card{background:#121b2f99;border:1px solid #6e89bc33;border-radius:14px;box-shadow:0 10px 30px rgba(4,13,33,.26)}
    .pad{padding:16px}
    table{width:100%;border-collapse:collapse}
    th,td{padding:10px 12px;border-bottom:1px solid #20304f;text-align:left}
    th{font-weight:800}
    .row-head{display:flex;justify-content:space-between;align-items:center;gap:10px;margin-bottom:10px}
    .pager{display:flex;gap:8px;align-items:center}
    .btn{border:1px solid #35558f;background:#152648;color:#e9f0ff;border-radius:8px;padding:8px 12px;text-decoration:none}
    .btn[disabled]{opacity:.5;pointer-events:none}
    .pill{display:inline-block;padding:.15rem .5rem;border:1px solid #35558f;border-radius:999px;font-size:.8rem}
  </style>
</head>
<body>
  

  <main class="container">
    <div class="row-head">
      <h1>Activity</h1>
      <div class="muted">Welcome, <%= adminUsername %></div>
    </div>

    <section class="card pad">
      <table aria-label="Activity table">
        <thead>
          <tr>
            <th style="width:190px;">When</th>
            <th>Actor</th>
            <th>Action</th>
            <th>Target</th>
            <th>Message</th>
            <th style="width:140px;">IP</th>
          </tr>
        </thead>
        <tbody>
          <% if (!rows || rows.length === 0) { %>
            <tr><td colspan="6" class="muted">No activity yet.</td></tr>
          <% } %>
          <% (rows || []).forEach(function(r){ %>
            <tr>
              <td><span class="muted"><%= new Date(r.occurred_at).toLocaleString() %></span></td>
              <td><%= r.actor_name || '—' %></td>
              <td><span class="pill"><%= r.action %></span></td>
              <td>
                <%= r.entity || '—' %>
                <% if (r.entity_id) { %><span class="muted"> #<%= r.entity_id %></span><% } %>
              </td>
              <td><%= r.message || '' %></td>
              <td class="muted"><%= r.ip || '—' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="row-head" style="margin-top:12px;">
        <div class="muted">Page <%= page %> / <%= totalPages %></div>
        <div class="pager">
          <a class="btn" href="?page=<%= Math.max(page-1,1) %>&limit=<%= pageSize %>" <%= page<=1 ? 'disabled' : '' %> >← Prev</a>
          <a class="btn" href="?page=<%= Math.min(page+1,totalPages) %>&limit=<%= pageSize %>" <%= page>=totalPages ? 'disabled' : '' %> >Next →</a>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
