<!-- src/views/partials/adminheader.ejs -->
<% const current = (typeof active === 'string') ? active : ''; %>

<header class="site-header">
  <div class="container navbar">
    <a class="logo" href="/admin">Admin Â· Jay Mahalaxmi</a>

    <button class="menu-toggle" aria-label="Toggle menu" onclick="window.miToggleMenu && window.miToggleMenu()">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>

    <nav class="nav" id="mi-nav">
      <a href="/admin"              class="<%= (current === 'dashboard')    ? 'active' : '' %>">Dashboard</a>
      <a href="/admin/products"     class="<%= (current === 'products')     ? 'active' : '' %>">Products</a>
      <a href="/admin/testimonials" class="<%= (current === 'testimonials') ? 'active' : '' %>">Testimonials</a>
      <a href="/admin/blog"         class="<%= (current === 'blog')         ? 'active' : '' %>">Blog</a>
      <a href="/admin/messages"     class="<%= (current === 'messages')     ? 'active' : '' %>">Manage Contact</a>

      <span aria-hidden="true" style="opacity:.35">|</span>
      <!-- NEW: Recently Deleted -->
      <a href="/admin/recycle"      class="<%= (current === 'recycle')      ? 'active' : '' %>">Recently Deleted</a>

      <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
        <form action="/admin/logout" method="POST" class="logout-form" style="display:inline">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="btn-light" style="margin-left:8px">Logout</button>
        </form>
      <% } else { %>
        <a href="/admin/logout" class="btn-light" style="margin-left:8px">Logout</a>
      <% } %>
    </nav>
  </div>
</header>
